{
    "name": "REST API - Ingresse Dev Test",
    "description": "Uma REST API simples com requisições de GET, POST, PUT e DELETE",
    "keywords": [
        "rest",
        "api",
        "ingresse",
        "dev test"
    ],
    "homepage": "http://github.com/jenifernagasaki/prova_ingresse_restapi",
    "license": "MIT",
    "authors": [
        {
            "name": "Jenifer Liemi Nagasaki",
            "email": "jenifer.nagasaki@hotmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "controllers\\": "controllers/"
        }
    },
    "autoload": {
        "psr-4": {
            "controllers\\": "controllers/"
        }
    },
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}